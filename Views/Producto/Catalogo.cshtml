@model IEnumerable<PROYECTO_BICICLETAS.Models.Producto>

@{
    ViewData["Title"] = "Catalogo de Productos";
}
<h1 style="text-align:center;">Catalogo de Productos</h1>

<div class="container">
  <div class="row">
    @foreach (var item in Model)
   { 
    
    <div class="col-sm-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="card-img-actions">
                                        <img class="img-responsive" width="96" height="150" src="/images/@item.Image"
                                        alt="@item.Image" />
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Price)</p>
                                    <p class="card-text"> Stock:.@Html.DisplayFor(modelItem => item.Amout)</p> 
                                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">Add</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View</a>
                                </div>
                            </div>
                        </div>

   
    }
 
</div>

    
  
  

  
 
