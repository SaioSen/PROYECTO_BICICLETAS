
@model IEnumerable<PROYECTO_BICICLETAS.Models.Indumentaria>

@{
    ViewData["Title"] = "Catalogo de Indumentaria";
}
<h1 style="text-align:center;">Catalogo de Indumentaria</h1>

<div class="container">
  <div class="row">
    @foreach (var item in Model)
   { 
    
    <div class="col-sm-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="card-img-actions" align="center">
                                        <img class="img-responsive" width="190" height="200" src="/img/@item.Image"
                                        alt="@item.Image" />
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <p class="card-text"> Precio: S/.@Html.DisplayFor(modelItem => item.Price)</p>
                                    <p class="card-text"> Stock:@Html.DisplayFor(modelItem => item.Amout)</p> 
                                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id">Add</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View</a>
                                </div>
                            </div>
                        </div>

   
    }
 
</div>